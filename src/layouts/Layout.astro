---
import { ClientRouter } from "astro:transitions";
import Stack from "◇components/Stack.astro";
import "◇styles/global.css";
import sourceSerif4RomanUrl from "◇styles/fonts/source-serif-4-variable-roman.woff2?url";
import sourceSerif4ItalicUrl from "◇styles/fonts/source-serif-4-variable-italic.woff2?url";

interface Props {
  title: string;
  mainGap?: 1 | 2 | 3 | 4 | 5 | 6 | 7 | 8 | 9;
}

let { title, mainGap = 4 } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={sourceSerif4RomanUrl}
      crossorigin="anonymous"
      transition:persist
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={sourceSerif4ItalicUrl}
      crossorigin="anonymous"
      transition:persist
    />
    <title>{title}</title>
    <ClientRouter fallback="swap" />
  </head>
  <body>
    <Stack gap={6}>
      <Stack as="header" gap={2}>
        <slot name="header" />
      </Stack>
      <Stack as="main" gap={mainGap}>
        <slot />
      </Stack>
    </Stack>
  </body>
</html>
